#######################
### FULLY-CONNECT 1 ###
#######################

layers {
    layer {
        name: "fc4"
        type: "innerproduct"
        num_output: 784
        weight_filler {
            type: "xavier"
        }
        bias_filler {
            type: "constant"
        }
        blobs_lr: 1.
        blobs_lr: 2.
        weight_decay: 1.
        weight_decay: 0.
    }
    bottom: "conv3"
    top: "fc4"
}

layers {
    layer {
        name: "relu4"
        type: "relu"
    }
    bottom: "fc4"
    top: "fc4"
}

layers {
    layer {
        name: "dropout1"
        type: "dropout"
        dropout_ratio: 0.5
    }
    bottom: "fc4"
    top: "fc4"
}


#######################
### FULLY-CONNECT 2 ###
#######################

layers {
    layer {
        name: "fc5"
        type: "innerproduct"
        num_output: 512
        weight_filler {
            type: "xavier"
        }
        bias_filler {
            type: "constant"
        }
        blobs_lr: 1.
        blobs_lr: 2.
        weight_decay: 1.
        weight_decay: 0.
    }
    bottom: "fc4"
    top: "fc5"
}

layers {
    layer {
        name: "relu5"
        type: "relu"
    }
    bottom: "fc5"
    top: "fc5"
}

layers {
    layer {
        name: "dropout2"
        type: "dropout"
        dropout_ratio: 0.5
    }
    bottom: "fc5"
    top: "fc5"
}

###############
### SOFTMAX ###
###############

layers {
    layer {
        name: "fc6"
        type: "innerproduct"
        num_output: 10
        weight_filler {
            type: "xavier"
        }
        bias_filler {
            type: "constant"
        }
        blobs_lr: 1.
        blobs_lr: 2.
        weight_decay: 1.
        weight_decay: 0.
    }
    bottom: "fc5"
    top: "fc6"
}

layers {
    layer {
        name: "loss"
        type: "softmax_loss"
    }
    bottom: "fc6"
    bottom: "label"
}
